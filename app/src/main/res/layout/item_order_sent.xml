<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#F4F4F4"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/green"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="幸福一家"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="已发货"
            android:textColor="@color/red"/>
    </LinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="36%w"
            app:layout_widthPercent="36%w"
            fresco:placeholderImage="@drawable/delete1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            app:layout_heightPercent="36%w"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="left|center_vertical"
                android:text="钢铁一号店"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="品名:高线"
                    android:textSize="@dimen/ts1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="材质:Q195"
                    android:textSize="@dimen/ts1"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:text="规格:1.2*1250*C"
                android:textSize="@dimen/ts1"/>

            <TextView
                android:id="@+id/oldPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:text="原价:3500/吨"
                android:textSize="@dimen/ts1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:text="现价:3500/吨"
                android:textColor="@color/red"
                android:textSize="@dimen/ts1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/delete2"
                    android:gravity="left|center_vertical"
                    android:text="积分抵用3%"
                    android:textColor="@color/red"
                    android:textSize="@dimen/ts1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/time"
                    android:gravity="left|center_vertical"
                    android:text="限时抢购"
                    android:textColor="@color/red"
                    android:textSize="@dimen/ts1"
                    />
            </LinearLayout>

        </LinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="50dp">

        <Button
            android:id="@+id/item_btnOrderSent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/btn_looklogistics_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:background="@drawable/btn_looklogistics"
            android:text="查看物流"
            />

        <LinearLayout
            android:id="@+id/linear_newbtn"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/item_btnchoose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/btn_looklogistics_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:background="@drawable/btn_looklogistics"
                android:text="选择抢单货车"
                />

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/item_btnhave"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/btn_looklogistics_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:background="@drawable/btn_looklogistics"
                android:text="已有货车"
                />


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/light_gray"/>


</LinearLayout>