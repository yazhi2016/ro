<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F4F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_status1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已抢单"
                android:textColor="@color/gray69"
                android:textSize="@dimen/statusbartextsize"
                />

            <TextView
                android:id="@+id/text_status2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待审核"
                android:textColor="@color/gray69"
                android:textSize="@dimen/statusbartextsize"
                />

            <TextView
                android:id="@+id/text_status3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="成功接单"
                android:textColor="@color/gray69"
                android:textSize="@dimen/statusbartextsize"
                />

            <TextView
                android:id="@+id/text_status4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="运输中"
                android:textColor="@color/gray69"
                android:textSize="@dimen/statusbartextsize"
                />

            <TextView
                android:id="@+id/text_status5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已送达"
                android:textColor="@color/gray69"
                android:textSize="@dimen/statusbartextsize"
                />

        </LinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_centerHorizontal="true"
                app:layout_widthPercent="75%w">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/gray69"
                    android:gravity="center"
                    android:layerType="software"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@color/statusbar"
                        android:gravity="center"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/text_status_circle1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:textSize="18sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@color/statusbar"
                        android:gravity="center"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/text_status_circle2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:textSize="18sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@color/statusbar"
                        android:gravity="center"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/text_status_circle3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:textSize="18sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@color/statusbar"
                        android:gravity="center"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/text_status_circle4"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:textSize="18sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@color/statusbar"
                        android:gravity="center"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/text_status_circle5"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:textSize="18sp"
                        />
                </RelativeLayout>
            </LinearLayout>

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </LinearLayout>


</RelativeLayout>