<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/bottom_btn1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_cornersolidgreen_cornersolidgray"
            android:gravity="center"
            android:text=""
            android:textColor="@color/selector_white_green"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/bottom_btn2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_corsolwhitestrgray_cornersolgray"
            android:gravity="center"
            android:text=""
            android:textColor="@color/selector_black_green"
            android:textSize="18sp"
            />

    </LinearLayout>


</LinearLayout>