<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/myoFraTablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tablayoutSecondHeight"
        android:background="#EEEEEE"
        app:tl_indicator_color="#EEEEEE"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/green"
        app:tl_textUnselectColor="#999999"
        app:tl_textsize="16sp"

        ></com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/myOrFraViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>